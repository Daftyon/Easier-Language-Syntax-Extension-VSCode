{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "EASIER",
  "scopeName": "source.easier",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.easier",
          "match": "\\b(PROGRAM|ALGORITHM|IF|ELSE|ELIF|FOR|WHILE|DO|BREAK|RETURN)\\b"
        },
        {
          "name": "storage.type.easier",
          "match": "\\b(INTEGER|REAL|STRING|BOOLEAN|OBJECT|VAR)\\b"
        },
        {
          "name": "keyword.other.easier",
          "match": "\\b(FUNCTION|SHOW|IMPORT)\\b"
        },
        {
          "name": "constant.language.easier",
          "match": "\\b(TRUE|FALSE)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.easier",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.easier",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.easier",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.easier",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.easier",
          "match": "//.*$"
        },
        {
          "name": "comment.block.easier",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.easier",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.easier",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.easier",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.easier",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.logical.easier",
          "match": "(AND|OR|NOT)"
        },
        {
          "name": "keyword.operator.arithmetic.easier",
          "match": "(\\+|\\-|\\*|\\/|%)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.easier",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    }
  }
}
